# Rewrite a few aliases because Mac is dumb.
alias ls='ls -lh'
alias ll='ls -lh'

# Mac uses a enviroment variable to color ls output.
export CLICOLOR=1

# Use command line vim as the editor.
export EDITOR=vim

# Search the local and ~/bin directories first, then Homebrew, then the system.
export PATH=.:~/bin:/usr/local/bin:$PATH

# Source bash completion from homebrew.
if [ -f $(brew --prefix)/etc/bash_completion ]; then
    . $(brew --prefix)/etc/bash_completion
fi
