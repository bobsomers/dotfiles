# Rewrite a few aliases because Mac is dumb.
alias ls='ls -lh'
alias g='mvim --remote-silent'
alias sug='sudo mvim --remote-silent'

# Mac uses a enviroment variable to color ls output.
export CLICOLOR=1

# Use command line vim as the editor.
export EDITOR=vim

# This is a bit silly because CWD and ~/bin will be on the path twice, but we
# want to search those directories first, then Homebrew, then the system.
export PATH=.:~/bin:/usr/local/bin:/usr/local/share/python:/usr/local/Cellar/ruby/1.9.3-p194/bin:$PATH

export NODE_PATH=/usr/local/lib/node_modules

# Source bash completion from homebrew.
if [ -f `brew --prefix`/etc/bash_completion ]; then
    . `brew --prefix`/etc/bash_completion
fi
